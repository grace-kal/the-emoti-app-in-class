<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyEmotiApp.LoginPage"
             Title="Login">
    <VerticalStackLayout>

        <Entry x:Name="UsernameEntry" Placeholder="Username"></Entry>
        <Entry x:Name="PasswordEntry" Placeholder="Password"  IsPassword="True"></Entry>
        <Button Text="Login" Clicked="OnLoginBtnClicked" BackgroundColor="LightPink" HorizontalOptions="Fill" ></Button>
        <Button Text="Register" Clicked="OnRegiBtnClicked" BackgroundColor="HotPink" HorizontalOptions="Fill" ></Button>
    </VerticalStackLayout>
</ContentPage>